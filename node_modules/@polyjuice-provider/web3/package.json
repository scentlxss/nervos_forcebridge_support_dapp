{
  "name": "@polyjuice-provider/web3",
  "version": "0.0.1-rc6",
  "main": "lib/index.js",
  "license": "MIT",
  "author": "RetricSu <inneverland2013@gmail.com>",
  "scripts": {
    "fmt": "prettier --write src/* tests/* package.json",
    "lint": "eslint -c ../../.eslintrc.js \"src/**/*.ts\"",
    "clean": "rm -rf lib/* && rm -rf dist/*",
    "build": "tsc",
    "boundle": "webpack",
    "example": "yarn boundle && yarn gen-config-for-example && cp ./dist/PolyjuiceHttpProvider.js example/web/static/js/ && node example/web/server.js",
    "test": "ava --timeout=100s",
    "publish": "npm publish",
    "test-publish": "npm publish --dry-run",
    "pack": "npm pack",
    "gen-config-for-example": "cd example && node init_config.js && cd .."
  },
  "publishConfig": {
    "access": "public",
    "registry": "http://registry.npmjs.org/"
  },
  "files": [
    "/lib"
  ],
  "ava": {
    "extensions": [
      "ts"
    ],
    "failFast": true,
    "concurrency": 1,
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "ava": "^3.15.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "browser-env": "^3.3.0",
    "browserify": "^17.0.0",
    "cross-fetch": "^3.1.4",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^10.0.0",
    "husky": "^6.0.0",
    "path": "^0.12.7",
    "prettier": "^2.3.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^8.0.12",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@polyjuice-provider/base": "0.0.1-rc6",
    "buffer": "^6.0.3",
    "encoding": "^0.1.13",
    "web3": "^1.4.0",
    "xhr2-cookies": "^1.1.0"
  }
}
